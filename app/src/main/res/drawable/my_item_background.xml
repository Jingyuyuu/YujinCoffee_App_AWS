<?xml version="1.0" encoding="utf-8"?>
<shape    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充的顏色 -->
    <solid android:color="@color/yj_yel001" />
    <!-- 設置按鈕的四個角爲弧形 -->
    <!-- android:radius 弧形的半徑 -->
    <corners android:radius="45dip" />
